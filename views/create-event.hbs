{{!-- //Signup for - always method=POST - action=/signup - name attribute for the DB - Submit button --}}

<div class="container">
  <div class="left">
    <div class="header">
      <h2 class="animation a1">PAWSOME! </h2>
      <h4 class="animation a2">You can now create your event</h4>
    </div>

    <div class="form">
      <form method="POST" action="/create-event" enctype="multipart/form-data">

        <label>Title</label><br>
        <input type="text" name="title" class="form-field animation a3" placeholder="Title of event"><br>

        <label>Location</label><br>
        <input type="text" name="location" class="form-field animation a4" placeholder="Enter your location"><br>

        <label>Date</label><br>
        <input type="date" name="date" class="form-field animation a5"><br>

        <label>Time</label><br>
        <input type="time" id="appt" name="time" min="00:00" max="23:59" class="form-field animation a6"><br>

        <label>Type</label><br>
        <select name="type" class="form-field animation a7"><br>
          <option>Active</option>
          <option>Training</option>
          <option>Relaxed meetup</option>
          <option>Socialization</option>
        </select><br>

        <label>Description</label><br>
        <textarea name="description" class="form-field animation a8" placeholder="Description of event" cols="40"
          rows="5"></textarea><br>
        <label for="avatar">Choose a event picture</label><br>
        <input type="file" name="imageUrl" accept="image/png, image/jpeg">
        <br>
        <button type="submit">Create event</button>

      </form>
    </div>
    {{#if message}}
    <div class="error">{{message}}</div>
    {{/if}}
  </div>
  <div class="right-create-event"></div>
</div>





