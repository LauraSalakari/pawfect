{{!-- //Signup for - always method=POST - action=/signup - name attribute for the DB - Submit button --}}
<h1>Upcoming events</h1>
<ul>
  {{#each events}}
  <li>{{date}} - {{title}} - {{type}} - {{location}}</li>
  <br>
  <div class="button-link">
    <a href="/event/{{ this._id }}/edit">
      <button type="submit" class="btn btn-primary">Edit</button>
    </a>

    <form method="POST" action="/event/{{ this._id }}/delete">
      <a href="/event/{{ this._id }}/delete">
        <button type="submit" class="btn btn-primary">Delete</button>
      </a>
    </form>
  </div>
  {{/each}}
</ul>