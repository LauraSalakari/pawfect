<article class='event-details-page'>
  <h1>{{ eventsData.title }}</h1>


  <div class="card mb-3">


    <img class="card-img-top" src={{ eventsData.eventPicture }} alt="Card image cap">

    <div class="card-body">
      <h5 class="card-title">Type of event: {{ eventsData.type }}</h5>

      <div class="event-description">
        <div>
          <h2>Event Description</h2>
          <p>{{ eventsData.description }} </p>
        </div>
      </div>

      <section class="event-details-buttons">


        <div class="event-details-box">
          <h4>Host: <a href="/profile/{{eventsDate.user._id}}">{{ eventsData.user.name }}</a> </h4>
          <p><span class="fas fa-calendar"></span>{{ eventsData.datePretty}}</p>
          <p><span class="fas fa-clock"></span>{{ eventsData.time}}</p>
          <p><span class="fas fa-map-marker"></span>{{ eventsData.location }}</p>
        </div>

        <div class="button-section">
          {{#if user }}
          <a href="/event/{{ eventsData._id }}/edit">
            <button class="button1" type="submit" class="btn btn-primary">Edit</button>
          </a>

          <form method="POST" action="/event/{{ eventsData._id }}/delete">
            <a href="/event/{{ eventsData._id }}/delete"></a>
            <button class="button1" type="submit" class="btn btn-primary">Delete</button>
            </a>
          </form>

          {{else}}
          {{#if attendee }}
          <a href="/event-cancel-registration/{{ eventsData._id }}">
            <button class="button1" type="button" class="btn btn-primary">Cancel Registration</button>
          </a>
          {{else}}
          <a href="/event-registration/{{ eventsData._id }}">
            <button class="button1" type="button" class="btn btn-primary">Register Now</button>
          </a>
          {{/if}}
          {{/if}}
          <a href="/events">
            <button class="button1" type="button" class="btn btn-primary">Events</button>
          </a>
        </div>
      </section>
    </div>
  </div>
</article>




{{!-- event details --}}
<div class="blog-card">
  <div class="meta">
    <div class="photo" style="background-image: url({{ eventsData.eventPicture }})"></div>
    <ul class="details">
      <li class="author">Host: <a href="/profile/{{eventsDate.user._id}}">{{ eventsData.user.name }}</a></li>
      <li class="date"><span class="fas fa-calendar"></span>{{ eventsData.datePretty}}</li>
      <li class="date"><span class="fas fa-map-marker"></span>{{ eventsData.location }}</li>


      <li class="tags">
        <ul>
          <li><a href="#">Learn</a></li>
          <li><a href="#">Code</a></li>
          <li><a href="#">HTML</a></li>
          <li><a href="#">CSS</a></li>
        </ul>
      </li>
    </ul>
  </div>
  <div class="description">
    <h1>{{ eventsData.title }}</h1>
    <h2>Type of event: {{ eventsData.type }}</h2>
    <h3> Event Description</h3>
    <p>{{ eventsData.description }}</p>
    <p class="read-more">
      <a href="#">Read More</a>
    </p>
  </div>
</div>