{{!-- //Signup for - always method=POST - action=/signup - name attribute for the DB - Submit button  --}}

<div class="container">
  <div class="left">
    <div class="header">
      <h2 class="animation a1">Welcome on MeetPup</h2>
      <h4 class="animation a2">Sign up to create an account</h4>
    </div>

    <div class="form">
      <form method="POST" action="/signup">
        <input name="name" type="text" class="input-form form-field animation a3" placeholder="Name" value="{{request.name}}">
        <input name="location" type="text" class="input-form form-field animation a4" placeholder="Enter your location"
          value="{{request.location}}">

        <input name="email" type="email" class="input-form form-field animation a5" placeholder="Email Address">
        <input name="password" type="password" class="input-form form-field animation a6" placeholder="Password">
        <input name="confirmpassword" type="password" class="input-form form-field animation a7"
          placeholder="Confirm your password"><br>
        {{!-- <button style="margin-top: 20px" class="animation a8">Sign Up</button> --}}

        <button style="margin-top: 20px" type="submit" class="btn-hover.color-8 animation a8">Sign Up</button>
      </form>
    </div>
    {{#if message}}
    <div class="error">{{message}}</div>
    {{/if}}
  </div>
  <div class="right-signup"></div>
</div>


